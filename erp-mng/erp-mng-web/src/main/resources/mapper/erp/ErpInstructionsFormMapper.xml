<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edgedo.sys.mapper.ErpInstructionsFormMapper" >
   
   
    <resultMap id="BaseResultMap" type="com.edgedo.sys.entity.ErpInstructionsForm" >
			<id column="ID" property="id"/>
			<result column="CREATE_TIME" property="createTime"/>
			<result column="CREATE_USER_ID" property="createUserId"/>
			<result column="CREATE_USER_NAME" property="createUserName"/>
			<result column="TERMINAL_BRAND" property="terminalBrand"/>
			<result column="INSTRUCTIONS_NAME" property="instructionsName"/>
			<result column="INSTRUCTIONS_CONTENT" property="instructionsContent"/>
			<result column="DATA_STATE" property="dataState"/>
    </resultMap>
   
    <resultMap id="BaseResultViewMap" type="com.edgedo.sys.queryvo.ErpInstructionsFormView" extends="BaseResultMap">
    
    </resultMap>
  
  
  <!-- ******* 新增字段请修改这里  ******  -->
  <sql id="Base_Column_List">
	 ID, CREATE_TIME, CREATE_USER_ID, CREATE_USER_NAME,
	 TERMINAL_BRAND, INSTRUCTIONS_NAME, INSTRUCTIONS_CONTENT, DATA_STATE
  </sql>
  
  <!-- ******* 利用好这里的动态查询条件  ******  -->
  <sql id="where">
  	<where>
		DATA_STATE='1'
		<if test='queryObj != null and  queryObj.id != null and @org.apache.commons.lang3.StringUtils@isNotEmpty(queryObj.id)'>
		AND  ID = #{queryObj.id}
		</if>
		<if test='queryObj != null and  queryObj.createTime != null'>
			AND  CREATE_TIME = #{queryObj.createTime}
		</if>
		<if test='queryObj != null and  queryObj.createUserId != null and @org.apache.commons.lang3.StringUtils@isNotEmpty(queryObj.createUserId)'>
		AND  CREATE_USER_ID = #{queryObj.createUserId}
		</if>
		<if test='queryObj != null and  queryObj.createUserName != null and @org.apache.commons.lang3.StringUtils@isNotEmpty(queryObj.createUserName)'>
		AND  CREATE_USER_NAME = #{queryObj.createUserName}
		</if>
		<if test='queryObj != null and  queryObj.terminalBrand != null and queryObj.terminalBrand != ""'>
		AND  TERMINAL_BRAND LIKE concat('%',#{queryObj.terminalBrand},'%')
		</if>
		<if test='queryObj != null and  queryObj.instructionsName != null and queryObj.instructionsName != ""'>
		AND  INSTRUCTIONS_NAME LIKE concat('%',#{queryObj.instructionsName},'%')
		</if>
		<if test='queryObj != null and  queryObj.instructionsContent != null and @org.apache.commons.lang3.StringUtils@isNotEmpty(queryObj.instructionsContent)'>
		AND  INSTRUCTIONS_CONTENT = #{queryObj.instructionsContent}
		</if>
		<if test='queryObj != null and  queryObj.dataState != null and @org.apache.commons.lang3.StringUtils@isNotEmpty(queryObj.dataState)'>
		AND  DATA_STATE = #{queryObj.dataState}
		</if>
  	</where>
  	
  </sql>
  
  <!-- ******* 排序判断  ******  
  <sql id="orderBy">
  	<if test="orderBy != null and orderBy!= '' ">
  		order by  ${orderBy}
  	</if>
  </sql>-->
  
  
  <!-- 分页条件查询  -->
  <select id="listPage" parameterType="com.edgedo.sys.queryvo.ErpInstructionsFormQuery" resultMap="BaseResultViewMap">
  		select <include refid="Base_Column_List"/> from erp_instructions_form 
  		<include refid="where"/>
  </select>
  
   <!-- 不分页条件查询  -->
  <select id="listByObj" parameterType="com.edgedo.sys.queryvo.ErpInstructionsFormQuery" resultMap="BaseResultViewMap">
  		select <include refid="Base_Column_List"/> from erp_instructions_form 
  		<include refid="where"/>
  </select>


	<select id="selectAllCarInfo" parameterType="map" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"/> from erp_instructions_form
		<where>
			DATA_STATE='1'
			<if test="terminalBrand != ''">
				AND  TERMINAL_BRAND LIKE concat('%',#{terminalBrand},'%')
			</if>
			<if test="instructionsName != ''">
				AND  INSTRUCTIONS_NAME LIKE concat('%',#{instructionsName},'%')
			</if>
		</where>
	</select>

	<!-- 批量删除 -->
	<update id="updateByIdDelete" parameterType="java.util.List">
		update erp_instructions_form set DATA_STATE = '0' where ID in
		<foreach collection="list" item="id" open="(" separator="," close=")">
			#{id}
		</foreach> and DATA_STATE='1'
	</update>
  
</mapper>